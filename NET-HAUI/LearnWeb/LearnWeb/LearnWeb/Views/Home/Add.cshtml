@model LearnWeb.Models.SinhVien

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1 style=" display: flex; justify-content:center;"><b>ADD</b></h1>
        <form action="~/Home/Add" method="post" enctype="multipart/form-data">
         
            <div>
                <label for="name">Name </label>
                <input type="text" name="name" id="name"  class="form-control" />
            
            </div>
            <div>
                <label for="gender">Gender</label>
                <input type="radio" name="gender" value="Nam" checked /><span>Nam</span>
                <input type="radio" name="gender" value="Nữ" />Nữ
            </div>
            <div>
                <label for="address">Address</label>
                <input type="text" name="address"  class="form-control" />
            


            </div>
            <div>
                <label for="file">File</label>
                <input type="file" name="Image" id="file" />
               

            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <div>
        <div style="text-align:center;"><a href="~/">Click here to go back</a></div>
    </div>


</body>

</html>
