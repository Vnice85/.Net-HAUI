<Window x:Class="WPFSQL2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSQL2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <PasswordBox x:Name="pswPassword" HorizontalAlignment="Left" Margin="129,173,0,0" VerticalAlignment="Top" Width="308" Height="51"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="129,84,0,0" VerticalAlignment="Top" Width="308" Height="51"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="63,89,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="45,189,0,0" VerticalAlignment="Top"/>
        <Button  Name="btnLogin"  Content="Log In" HorizontalAlignment="Left" Margin="180,279,0,0" VerticalAlignment="Top" Height="46" Width="151" Click="btnLogin_Click"/>
        <Grid x:Name="overlay" Visibility="Collapsed">
            <TextBlock Text="Loading..." HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Red" Margin="240,253,0,0"/>
        </Grid>
    </Grid>
</Window>
